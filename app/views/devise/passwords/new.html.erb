<div class='page-header'>
  <h2>Forgot Password?</h2>
</div>

<div class='well bs-component col-lg-8'>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>

  <div class='form-group'>
    <%= f.label :email, class: 'col-lg-2' %>
    <div class='col-lg-10'>
      <%= f.email_field :email, class: 'form-control', autofocus: true %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Please Send Me Reset Password Instructions", class: 'btn btn-info' %>
  </div>
<% end %>
</div>

<div class='col-lg-8'>
  <%= render "devise/shared/links" %>
</div>
