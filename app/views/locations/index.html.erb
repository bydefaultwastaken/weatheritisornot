<div class='page-header'>
  <h3>Location</h3>
</div>

<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Weather Guess</th>
      <th>Actual Weather</th>
      <th>Modify</th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= link_to location.name.upcase, location %></td>
        <td><%= location.address.upcase%></td>
        <td><%= location.weather.capitalize %> (click on Edit to change guess)</td>
        <td>Click on the Name to Find Out!</td>
        <td><%= link_to 'Edit', edit_location_path(location) %> | 
            <%= link_to 'Delete', location, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Location', new_location_path, class: 'btn btn-info' %>
