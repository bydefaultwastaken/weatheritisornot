<div class='well bs-component'>
  <%= form_for(location, html: { class: 'form-horizontal' }) do |f| %>
    <% if location.errors.any? %>
    <fieldset>
        <div id="error_explanation">
          <h2><%= pluralize(location.errors.count, "error") %> prohibited this location from being saved:</h2>

          <ul>
          <% location.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class='form-group'>
        <%= f.label :name, class: 'col-lg-2' %>
        <div class='col-lg-10'>
        <%= f.text_field :name, class: 'form-control', required: true %>
        </div>
      </div>

      <div class='form-group'>
        <%= f.label :address, class: 'col-lg-2' %>
        <div class='col-lg-10'>
        <%= f.text_field :address, class: 'form-control', required: true %>
        </div>
      </div>

      <div class='form-group'>
        <%= f.label :'weather (select from drop-down list)', class: 'col-lg-2' %>
        <div class='col-lg-10'>
        <%= f.select :weather_guess, ['clear', 'clouds', 'drizzle', 'fog', 'haze','hurricane', 'mist', 'rain', 'snow', 'squalls', 'thunderstorm', 'tornado'], class: 'form-control', required: true %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit %>
      </div>
    <fieldset>
  <% end %>
</div>
